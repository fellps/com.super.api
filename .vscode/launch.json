{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "args": ["-e", "js,yaml"],
      "program": "${workspaceFolder}/index.js",
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "timeout": 30000,
      "console": "integratedTerminal" //If U want see what command will be executed change to "integratedTerminal" or "externalTerminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9999,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false
    }
  ]
}
